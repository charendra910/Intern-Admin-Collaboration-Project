@model Intern_Admin_Collaboration.Models.AddEventDetailsModel
@{
    ViewData["Title"] = "EventEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="row g-8">
    <div class="col-md-6">
        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Id">Id</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="EventName">Event Name</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="RegistrationLink">Registration Link</label>
                <input asp-for="RegistrationLink" class="form-control" />
                <span asp-validation-for="RegistrationLink" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="col-form-label" asp-for="StartDate">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="col-form-label" asp-for="EndDate">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Status">Status</label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <!-- Input for Poster Upload -->
        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="PosterFileName">Upload Poster</label>
                <input asp-for="PosterFileName" type="file" class="form-control" />
                <span asp-validation-for="PosterFileName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <button class="btn btn-primary" type="submit" style="width:100%">Update Event</button>
    </div>
</form>
