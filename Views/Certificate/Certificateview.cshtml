@model IEnumerable<CertificateModel>

@{
    ViewData["Title"] = "Certificateview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Certificateview</h1>



<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: antiquewhite; /* Choose your desired background color */
        }

        .box {
            width: calc(33.33% - 10px);
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .box-two {
            width: calc(50% - 10px);
            background-color: #f0f0f0;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .bd-color {
            background-color: antiquewhite;
        }

        .approve-btn {
            padding-left: 50px;
            padding-right: 40px;
            /* Adjust as needed */
        }

        .reject-btn {
            padding-left: 50px;
            padding-right: 50px;
        }

    </style>
</head>
<body>

    <div class="container p-4">
        <div class="row p-3 justify-content-center">
            <div class="col-6">
                <h2 class="text-center">Update Task Details</h2>
            </div>
        </div>
    </div>

    <div class="container">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Interns Department</th>
                    <th>Certificate Name</th>
                    <th>Issue Date</th>
                    <th>File Name</th>
                  
                    <th>Operation</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.email</td>
                        <td>@item.intern_department</td>
                        <td>@item.certificate_name</td>
                        <td>@item.issue_date</td>
                        <td>@item.CertificateFileName</td>

                        <td role="group">
                            <div class="row mb-2">
                                <div class="col-md-12">
                                    <a class="btn btn-primary btn-block approve-btn" asp-controller="Certificate" asp-action="Editcertificate" asp-route-id="@item.id">Edit</a>
                                </div>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
