@model Intern_Admin_Collaboration.Models.TaskdetailModel

<div style="margin-top:10px;">
    <center>
        <h1><b>UPDATE TASK DETAILS</b></h1>
    </center>
</div>

<br />


<form method="post" class="row g-8">
    <div class="col-md-6">
        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Id">Id</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Department">Department</label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Task_Name">Task Name</label>
                <input asp-for="Task_Name" class="form-control" />
                <span asp-validation-for="Task_Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Assign_Date">Assign Date</label>
                <input asp-for="Assign_Date" type="date" class="form-control" />
                <span asp-validation-for="Assign_Date" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label class="col-form-label" asp-for="Deadline_Date">Deadline_Date</label>
                <input asp-for="Deadline_Date" class="form-control" />
                <span asp-validation-for="Deadline_Date" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <br />
        <button class="btn btn-primary" style="width:630px;" type="submit">UPDATE TASK STATUS</button>
    </div>


    <div class="col-md-12">
        <br />
        <button class="btn btn-primary" asp-controller="Task" asp-action="Taskview" type="submit" style="width:630px;">BACK TO THE lIST</button>
    </div>


</form>

    <style>
    body {
        background-color: antiquewhite; /* Choose your desired background color */
    }
</style>